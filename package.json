{
  "name": "@valcome/rekursos",
  "version": "0.1.0-alpha.1",
  "description": "Rekursos: Titan of TypeScript 🔱🏛️ A simple TypeScript library providing essential utility functions, helpers, and operators.",
  "scripts": {
    "test": "jest",
    "build": "tsc --project tsconfig.esm.json & tsc --project tsconfig.cjs.json",
    "postbuild": "cp ./package.json ./dist/rekursos/",
    "xpreversion": "yarn test",
    "version": "yarn build"
  },
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js",
    "default": "./esm/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valcome-innovation/rekursos.git"
  },
  "author": "Valcome Innovation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/valcome-innovation/rekursos/issues"
  },
  "homepage": "https://github.com/valcome-innovation/rekursos#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
