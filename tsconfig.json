{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist/types",
    "declarationMap": false,
    "target": "esNext",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "Node",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
